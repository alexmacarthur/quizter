{
  "name": "quizter",
  "version": "0.0.0",
  "author": "Alex MacArthur <alex@macarthur.me>",
  "description": "A simple quiz app built with ReactJS.",
  "repository": {
    "type": "git",
    "url": "https://github.com/alexmacarthur/quizter"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "browser-sync": "^2.12.8",
    "eslint": "^2.10.2",
    "node-sass": "^3.7.0",
    "onchange": "^2.4.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.5.2",
    "react-tools": "^0.13.3",
    "uglify-js": "^2.6.2"
  },
  "scripts": {
    "sass": "node-sass --output-style compressed -o assets assets/sass",
    "autoprefixer": "postcss -u autoprefixer --autoprefixer.browsers 'last 3 version' -r assets/css/style.css",
    "lint": "eslint assets/js/scripts-compiled.js",
    "uglify": "uglifyjs assets/js/scripts-compiled.js -m -o assets/js/scripts.min.js",
    "babel": "babel --presets es2015,react assets/js/scripts.js --out-file assets/js/scripts-compiled.js",
    "serve": "browser-sync start --server --files 'assets/css/*.css, assets/js/*.js'",
    "build:css": "npm run sass && npm run autoprefixer",
    "build:js": "npm run babel && npm run lint && npm run uglify",
    "watch:css": "onchange 'assets/sass/*.scss' -- npm run build:css",
    "watch:js": "onchange 'assets/js/*.js' -- npm run build:js",
    "watch:all": "parallelshell 'npm run serve' 'npm run watch:css' 'npm run watch:js'"
  }
}
